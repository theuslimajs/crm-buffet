generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id String @id @default(cuid())
  nome String
  email String @unique
  senha String
  cargo String
  podeVerLeads Boolean @default(false)
  podeVerCalendario Boolean @default(false)
  podeVerFestas Boolean @default(false)
  podeVerTarefas Boolean @default(false)
  podeVerEstoque Boolean @default(false)
  podeVerFinanceiro Boolean @default(false)
  podeVerRelatorios Boolean @default(false)
  createdAt DateTime @default(now())
}

model Lead {
  id String @id @default(cuid())
  nome String
  telefone String
  origem String
  status String
  dataVisita DateTime?
  createdAt DateTime @default(now())
}

model Cliente {
  id String @id @default(cuid())
  nome String
  telefone String
  email String?
  festas Festa[]
  createdAt DateTime @default(now())
}

model Festa {
  id String @id @default(cuid())
  nomeAniversariante String
  dataFesta DateTime
  valorTotal Float
  qtdPessoas Int
  status String
  clienteId String
  cliente Cliente @relation(fields: [clienteId], references: [id])
  pacoteId String
  pacote Pacote @relation(fields: [pacoteId], references: [id])
  pagamentos Pagamento[]
  createdAt DateTime @default(now())
}

model Pacote {
  id String @id @default(cuid())
  nome String
  precoBase Float
  descricao String?
  festas Festa[]
}

model Pagamento {
  id String @id @default(cuid())
  valor Float
  status String
  dataVencimento DateTime
  parcela Int
  metodo String?
  festaId String
  festa Festa @relation(fields: [festaId], references: [id])
}

model Despesa {
  id String @id @default(cuid())
  descricao String
  valor Float
  categoria String
  dataVencimento DateTime
  status String
  createdAt DateTime @default(now())
}

model ItemEstoque {
  id String @id @default(cuid())
  nome String
  categoria String
  quantidade Int
  estoqueMinimo Int
  unidade String
}

model Tarefa {
  id String @id @default(cuid())
  descricao String
  equipe String
  dataLimite DateTime
  status String
}

model Simulacao {
  id String @id @default(cuid())
  receitaPrevista Float
  custoTotal Float
  lucroEstimado Float
  margem Float
  detalhes String
  createdAt DateTime @default(now())
}